{
    "compilerOptions": {
        "target": "es2016",
        "module": "es6",
        "strict": true,
        "noImplicitAny": false,
        "noEmit": true,
        "allowJs": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"]
}
